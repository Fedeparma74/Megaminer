{
    "Path": "xmrig-amd.exe",
    "Uri": "https://github.com/xmrig/xmrig-amd/releases/download/v2.7.0-beta/xmrig-amd-2.7.0-beta-win64.zip",
    "SHA256": "77c93166d3e0963c313e08887db27ff8c9c8f3f2e3ee124645a7e6bf585b76a6",
    "Type": "AMD",
    "Arguments": [
        "-o #Protocol#://#Server#:#Port#",
        "-u #Login#",
        "-p #Password#",
        "--opencl-platform=#GPUPlatform#",
        "--opencl-devices=#Devices#$(if(-not($DeviceGroup.MemoryGB -lt 8 -and $Algorithm -eq 'CryptoNightHeavy')){',#Devices#'})",
        "--opencl-launch=864x8",
        "$(if ($Nicehash){'--nicehash'})",
        "--donate-level 1",
        "--api-port #APIPort#",
        "#AlgorithmParameters#"
    ],
    "API": "XMRig",
    "APIPort": 4028,
    "Fee": 0.01,
    "Algorithms": {
        "CryptoLightIPBC": "-a cryptonight-lite --variant ipbc",
        "CryptoLightV7": "-a cryptonight-lite --variant 1",
        "CryptoNightHeavy": "-a cryptonight-heavy",
        "CryptoNightV7": "-a cryptonight --variant 1",
        "CryptoNightXTL": "-a cryptonight --variant xtl"
    }
}